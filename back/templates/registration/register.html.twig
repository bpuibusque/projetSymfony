{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/registration/register.css') }}">
{% endblock %}

{% block body %}
<div class="register-container">
    <h1 class="form-title">Register</h1>

    {% if form_errors(registrationForm) %}
        <div class="alert alert-danger">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    {{ form_start(registrationForm, { 'attr': { 'class': 'register-form' } }) }}
        <div class="form-group">
            {{ form_row(registrationForm.prenom, { 'label': 'First Name' }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.nom, { 'label': 'Last Name' }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.email, { 'label': 'Email Address' }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, { 'label': 'Password' }) }}
        </div>
        <div class="form-group agree-terms">
            {{ form_row(registrationForm.agreeTerms, { 'label': 'I agree to the terms' }) }}
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
