{% extends 'base.html.twig' %}

{% block title %}Créer/Modifier un Message Privé{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/private_message/edit.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="form-title">Créer/Modifier un Message Privé</h1>
    
    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.receiver, 'Destinataire') }}
                {{ form_widget(form.receiver, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.content, 'Message') }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            </div>
            
            <div class="form-actions">
                <button class="btn btn-success">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
