{% extends 'base.html.twig' %}

{% block title %}Créer un Message Privé{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/private_message/new.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="form-title">Créer un Message Privé</h1>
    <div class="form-wrapper">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.receiver, 'Destinataire') }}
            {{ form_widget(form.receiver, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.content, 'Message') }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '6'}}) }}
        </div>
        <div class="form-actions">
            <button class="btn btn-primary">Envoyer</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
