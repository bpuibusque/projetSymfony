{% extends 'base.html.twig' %}

{% block title %}Créer/Modifier une Notification{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/notification/new.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="main-title">Créer/Modifier une Notification</h1>

    <div class="form-container">
        {{ form_start(form, { 'attr': { 'class': 'notification-form' } }) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>

    <div class="back-link">
        <a href="{{ path('notification_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
