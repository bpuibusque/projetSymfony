{# templates/commission/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ commission.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/commission/show.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="header">
        <h1 class="title">{{ commission.name }}</h1>
        <p class="description">{{ commission.description }}</p>
        <a href="{{ path('post_new', {'commissionId': commission.id}) }}" class="btn btn-success">Créer une nouvelle publication</a>
    </div>

    <h2 class="sub-title">Publications</h2>

    <div class="posts">
        {% for post in posts %}
            <div class="post-card">
                <h3 class="post-title">{{ post.title }}</h3>
                <p class="post-content">{{ post.content }}</p>
                <p class="post-meta">
                    <small>Créé par {{ post.user.email }} le {{ post.createdAt|date('d/m/Y H:i') }}</small>
                </p>
            </div>
        {% else %}
            <p class="no-posts">Aucune publication n'a encore été ajoutée pour cette commission.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
