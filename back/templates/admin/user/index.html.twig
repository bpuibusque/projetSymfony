{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin/user/index.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="main-title">Liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('admin_user_roles', {'id': user.id}) }}" class="btn btn-primary">Modifier les rôles</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="action-link">
        <a href="{{ path('homepage') }}" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
</div>
{% endblock %}
